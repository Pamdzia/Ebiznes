# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /products/add        controllers.ProductController.addProductForm

GET     /products        controllers.ProductController.listOfProducts
GET     /products/:id        controllers.ProductController.getProduct(id: Long)
POST    /products            controllers.ProductController.addProduct
POST    /products/:id    controllers.ProductController.updateProduct(id: Long)
DELETE  /products/:id        controllers.ProductController.deleteProduct(id: Long)


GET     /products/edit/:id   controllers.ProductController.updateProductForm(id: Long)
